<h1>Edit this bookmark</h1>
<h4><%= @bookmark.url %></h4>
<%= form_for [@topic, @bookmark] do |b| %>
  <div class="form-group">
    <%= b.label :urls %>
    <%= b.text_field :url, class: 'form-control', placeholder: "#{@bookmark.url}" %>
  </div>
  <div>
    <button>
      <%= b.submit "Save", class: 'btn btn-success' %>
    </button>
  </div>
<% end %>
