<%= form_for [topic] do |w| %>

  <% if topic.errors.any? %>
     <div class="alert alert-danger">
       <h4><%= pluralize(topic.errors.count, "error") %>.</h4>
       <ul>
         <% topic.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
         <% end %>
       </ul>
     </div>
   <% end %>

  <%= form_group_tag(topic.errors[:title]) do %>
    <%= w.label :title %>
    <%= w.text_field :title, class: 'form-control', placeholder: "Enter topic title" %>
  <% end %>

  <div class="form-group">
    <%= w.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
