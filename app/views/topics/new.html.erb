<h1> New topic </h1>
<div class="row">
  <div class="col-md-4">
    <%= form_for @topic do |w| %>
      <div class="form-group">
        <%= w.label :title %>
        <%= w.text_field :title, class: 'form-control', placeholder: "Enter topic name" %>
      </div>
      <%= w.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
